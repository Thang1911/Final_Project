@page "/Users/Delete/{Id}"
@inject HttpClient Http
@inject NavigationManager navManager
@rendermode InteractiveServer

<h1 class="mb-3">Delete User</h1>
<p>Are you sure you want to delete user with Id @Id?</p>
<button class="btn btn-danger" @onclick="DeleteUser">Delete</button>
<a class="btn btn-secondary"  href="/Users">Cancel</a>

@code {
    [Parameter]
    public string Id { set; get; }

    protected async Task DeleteUser()
    {
        var response = await Http.DeleteAsync($"http://localhost:5160/api/Users/{Id}");
        navManager.NavigateTo("/Users");
    }
}
